<form action="/articles/{{title}}?_method=PUT" method="POST">
  Title:
  <input type="text" name='title' value={{title}} id='editTitleInput'>
  <br> Author:
  <input type="text" name='author' value={{author}} id='editAuthorInput'> {{#if invalidAuthor}} {{>invalidAuthorErr}} {{/if}}
  <br> Body:
  <input type="text" name='body' value={{body}} id='editBodyInput'> {{#if invalidBody}} {{>invalidBodyErr}} {{/if}}
  <br>
  <button type="submit">SUBMIT CHANGES</button>
  <a href="/articles/{{title}}">Return to article page</a>
</form>